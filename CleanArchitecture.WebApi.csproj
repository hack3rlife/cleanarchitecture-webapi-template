<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageType>Template</PackageType>
    <PackageVersion>1.0</PackageVersion>
    <PackageId>CleanArchitecture.ASP.NETCore.WebAPI.Template</PackageId>
    <Title>Clean Architecture ASP .NET Core WebAPI Template</Title>
    <Authors>hack3rlife</Authors>
    <Description>Clean Architecture Project Template for ASP .NET Core WebAPI Projects.</Description>
    <PackageTags>dotnet-new;templates</PackageTags>
    <TargetFramework>netcoreapp3.1</TargetFramework>

    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <ContentTargetFolders>content</ContentTargetFolders>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Template\**\*" Exclude="Template\**\bin\**;templates\**\obj\**;Template\**\.vs\**" />
    <Compile Remove="**\*" />
  </ItemGroup>

</Project>